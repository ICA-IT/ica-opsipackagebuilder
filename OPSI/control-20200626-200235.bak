[Package]
version: 1
depends: 

[Product]
type: localboot
id: opsipackagebuilder
name: opsiPackageBuilder
description: The opsi PackageBuilder is as an aid for building opsi software packages. A ScriptEditor is supplied with useful functions for creating installation scripts. This editor offers you syntax highlighting, call tips, autocomplete, code folding, etc. and is individually configurable. However, this editor is broken on modern versions of Windows. For an alternative, try the jEdit opsi product.
advice: 
version: 8.4.4
priority: 0
licenseRequired: False
productClasses: 
setupScript: setup.opsiscript
uninstallScript: uninstall.opsiscript
updateScript: 
alwaysScript: 
onceScript: 
customScript: 
userLoginScript: 

[ProductProperty]
type: unicode
name: reset_products
multivalue: True
editable: True
description: Set product status to uninstalled after deinstallation
values: ["opsipackagebuilder-config"]
default: ["opsipackagebuilder-config"]

[ProductProperty]
type: unicode
name: updater
multivalue: False
editable: False
description: Enable/disable internal Updater permanently.
values: ["disable", "enable"]
default: ["enable"]

[ProductProperty]
type: unicode
name: lang
multivalue: False
editable: False
description: Program language
values: ["english", "german"]
default: ["english"]

[ProductProperty]
type: unicode
name: setup_type
multivalue: False
editable: False
description: Setup type
values: ["Executable", "Full", "Source"]
default: ["Executable"]

